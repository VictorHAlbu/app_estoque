<div class="page-header">
  <%= link_to produtos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_produto_path(@produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show produto</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @produto.nome %></dd>

  <dt>Descricao:</dt>
  <dd><%= @produto.descricao %></dd>

  <dt>Quantidade:</dt>
  <dd><%= @produto.quantidade %></dd>

  <dt>Vecimento:</dt>
  <dd><%= @produto.vecimento %></dd>

  <dt>Preco compra:</dt>
  <dd><%= @produto.preco_compra %></dd>

  <dt>Preco venda:</dt>
  <dd><%= @produto.preco_venda %></dd>

</dl>
